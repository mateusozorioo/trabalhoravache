<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Discos</title>
  <link rel="stylesheet" href="/css/disc.css">
</head>
<body>
  <div class="app-container">
    <header class="navbar">
      <div class="navbar-title">
        <h1>SoundWave</h1>
      </div>
      <ul class="nav-links">
        <li><a href="/" class="nav-link">Início</a></li>
        <li><a href="/discs" class="nav-link active">Discos</a></li>
        <li><a href="/artists" class="nav-link">Artistas</a></li>
        <li><a href="/genres" class="nav-link">Gêneros</a></li>
      </ul>
    </header>

    <main class="main-content">
      <h1 class="page-title">Discos Cadastrados</h1>
      <a href="/discs/add" class="btn-primary">Cadastrar Novo Disco</a>

      <!-- Formulário de busca -->
      <form action="/discs/search" method="GET" class="search-form">
        <input type="text" name="titulo" placeholder="Buscar por título" class="search-input">
        <input type="text" name="genero" placeholder="Buscar por gênero musical" class="search-input">
        <button type="submit" class="btn-secondary">Buscar</button>
      </form>  

      <!-- Exibição dos discos -->
      <% if (discos.length > 0) { %>
        <div class="disco-list">
          <% discos.forEach(disco => { %>
            <div class="disco-item">
              <img src="<%= disco.capa %>" alt="Capa de <%= disco.titulo %>" class="disco-capa">
              <div class="disco-info">
                <h2 class="disco-title"><%= disco.titulo %></h2>
                <p class="disco-details">
                  <strong>Gênero:</strong> <%= disco.genero %> <br>
                  <strong>Artista:</strong> <%= disco.artista %> <br>
                  <strong>Ano:</strong> <%= disco.ano %>
                </p>
                <a href="/discs/edit/<%= disco.id %>" class="btn-edit">Editar</a>
                <a href="/discs/delete/<%= disco.id %>" class="btn-delete">Excluir</a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="no-discs">Nenhum disco cadastrado ainda!</p>
      <% } %>
    </main>
  </div>
</body>
</html>
